# Application Settings
APP_NAME=AI Customer Support Agent
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/customer_agent_db

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM API Keys (Configure your preferred provider)
# OpenRouter (Recommended - Access to multiple models with one API key)
OPENROUTER_API_KEY=your-openrouter-key-here  # Get from https://openrouter.ai/keys
OPENROUTER_MODEL=gpt-oss  # See https://openrouter.ai/docs#models

# OpenAI / ChatGPT
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic / Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Provider Selection: openrouter, openai, chatgpt, anthropic, claude, mock
LLM_PROVIDER=openrouter

# TikTok Integration (Mock for development)
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_WEBHOOK_SECRET=your-webhook-secret

# LinkedIn Integration (Mock for development)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Agent Configuration
AGENT_MAX_TOKENS=500
AGENT_TEMPERATURE=0.7
AGENT_TIMEOUT_SECONDS=30

# Rate Limiting
TIKTOK_RATE_LIMIT=60  # requests per minute
LINKEDIN_RATE_LIMIT=100  # requests per minute

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
